	<div class="alert"><%= message %></div>
<% } %>

<h2 class="orange indie big-bold">Login</h2>

<form class="col-sm-7 col-md-7" method="post" action="/login">
  <div class="form-group col-sm-7 col-md-7">
    <label class="orange indie" for="email">Email</label>
    <input class="form-control" type="text" name="email" id="email">
  </div>

  <div class="form-group col-sm-7 col-md-7">
    <label class="orange indie" for="email">Password</label>
    <input class="form-control" type="password" name="password" id="password">
  </div>
  <div class="form-group col-sm-7 col-md-7">
    <input class="btn btn-default col-sm-7 col-md-6" type="submit">
  <div class="form-group col-sm-7 col-md-7">
</form>
